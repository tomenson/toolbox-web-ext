{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "../",
    "jsx": "react",
    "lib": ["ES2021", "DOM"],
    "module": "ES2020",
    "moduleResolution": "node",
    "paths": {
      "@src/*": ["src/*"]
    },
    "rootDir": "../",
    "sourceMap": true,
    "target": "ES2021",
    "declaration": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "outDir": "dist",
    "strictNullChecks": true,
    "useUnknownInCatchVariables": true
  },
  "include": ["../src/**/*"],
  "exclude": [
    "**/*/*.test.ts",
    "acceptance-tests",
    "build",
    "dist",
    "examples",
    "jest",
    "node_modules",
    "scripts",
    "src/setupTests.ts",
    "webpack"
  ]
}