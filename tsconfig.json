{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["ES2021", "DOM"],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist/js",
    "paths": {
      "@src/*": ["src/*"]
    },
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "ES2021",
    "useUnknownInCatchVariables": true
  }
}